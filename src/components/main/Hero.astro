---
import { t } from "@/utils/i18n";
import CVnSocials from "./CVnSocials.astro";

const locale = Astro.currentLocale || 'en';
---
<div class="hero-container">
  <h1 class="hero-title animate-fadeInUp" style="animation-delay: 0.1s;" set:html={t(locale, 'hero.title')} />
  <div class="hero-subtitle-container animate-fadeInUp" style="animation-delay: 0.2s;">
    <span class="hero-subtitle">{t(locale, 'hero.subtitle')}</span>
    <span class="hero-subtitle-separator">â€¢</span>
    <span class="hero-subtitle-location">{t(locale, 'hero.location')}</span>
  </div>
  <div class="hero-description">
    <p class="animate-fadeInUp" style="animation-delay: 0.3s;" set:html={t(locale, 'hero.description-1')} />
    <p class="animate-fadeInUp" style="animation-delay: 0.4s;" set:html={t(locale, 'hero.description-2')} />
  </div>
  <div class="hero-cv-socials animate-fadeInUp" style="animation-delay: 0.5s;">
    <CVnSocials />
  </div>
</div>

<style>
  .hero-container {
    text-align: center;
  }
  .hero-title {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }
  .hero-subtitle-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .hero-subtitle-separator {
    color: var(--color-primary);
    margin: 0 0.5rem;
  }
  .hero-description {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  .hero-description :global(.text-highlight) {
    font-weight: 600;
  }

  @media (min-width: 768px) {
    .hero-container {
      max-width: 65ch;
      text-align: left;
    }
    .hero-title {
      font-size: 4rem;
      margin-bottom: 0;
    }
    .hero-subtitle-container {
      display: block;
    }
  }
</style>