---
import LinkButton from '../base/LinkButton.astro';
import Dropdown from '../base/Dropdown.astro';
import { t } from "@/utils/i18n";

const locale = Astro.currentLocale || 'en';
---
<div class="cv-socials-container">
  <Dropdown 
    buttonText={t(locale, 'hero.download-cv')}
    buttonIcon="CV"
    items={[
      {
        href: "/CV_en.pdf",
        label: t(locale, 'languages.english'),
        icon: "CV"
      },
      {
        href: "/CV_ja.pdf",
        label: t(locale, 'languages.japanese'),
        icon: "CV"
      }
    ]}
    buttonIconColorDark="var(--color-accent)"
    buttonBorderColorDark="var(--color-accent)"
    buttonIconColorLight="var(--color-accent)"
    buttonBorderColorLight="var(--color-accent)"
    itemIconColorDark="var(--color-accent)"
    itemIconColorLight="var(--color-accent)"
  />
  <LinkButton 
    icon="linkedin" 
    href="https://www.linkedin.com/in/daryl-ang99/"
    iconColorDark="#0077B7"
    borderColorDark="#0077B7"
    iconColorLight="#0A66C2"
    borderColorLight="#0A66C2"
  />
  <LinkButton 
    icon="github" 
    href="https://github.com/ruizaemon"
    iconColorDark="#dbd6d0"
    borderColorDark="#dbd6d0"
    iconColorLight="#24292f"
    borderColorLight="#24292f"
  />
</div>

<style>
  .cv-socials-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 14px;
  }
  @media (min-width: 768px) {
    .cv-socials-container {
      justify-content: flex-start;
    }
  }
</style>