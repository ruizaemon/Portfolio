---
interface Props {
  title: string;
  image: string;
  url?: string;
  animationDelay?: number;
}

const { title, image, url, animationDelay = 0 } = Astro.props;
---

{url ? (
  <a href={url} class="project-card animate-fadeInUp" style={`animation-delay: ${animationDelay}s;`}>
    <div class="project-card-image-wrapper">
      <img src={image} alt={title} class="project-card-image" loading="lazy" />
      <div class="project-card-overlay"></div>
    </div>
    <div class="project-card-content">
      <h3 class="project-card-title">{title}</h3>
    </div>
  </a>
) : (
  <div class="project-card animate-fadeInUp" style={`animation-delay: ${animationDelay}s;`}>
    <div class="project-card-image-wrapper">
      <img src={image} alt={title} class="project-card-image" loading="lazy" />
      <div class="project-card-overlay"></div>
    </div>
    <div class="project-card-content">
      <h3 class="project-card-title">{title}</h3>
    </div>
    <div>
      {/* add chips as tags (In-app, Github, website, etc.) */}
      {/* language tags (Vue, React, Svelte, etc.) */}
    </div>
  </div>
)}

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    background-color: transparent;
    position: relative;
    cursor: pointer;
  }

  .project-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 255, 153, 0.15);
  }

  [data-theme="light"] .project-card:hover {
    box-shadow: 0 8px 24px rgba(22, 187, 140, 0.2);
  }

  .project-card-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.05);
  }

  .project-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .project-card:hover .project-card-image {
    transform: scale(1.05);
  }

  .project-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      transparent 60%,
      rgba(0, 0, 0, 0.4) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .project-card-overlay {
    opacity: 1;
  }

  .project-card-content {
    padding: 1.25rem;
    background-color: rgba(255, 255, 255, 0.02);
    transition: background-color 0.3s ease;
  }

  .project-card:hover .project-card-content {
    background-color: rgba(0, 255, 153, 0.05);
  }

  [data-theme="light"] .project-card-content {
    background-color: rgba(0, 0, 0, 0.02);
  }

  [data-theme="light"] .project-card:hover .project-card-content {
    background-color: rgba(22, 187, 140, 0.08);
  }

  .project-card-title {
    font-weight: 600;
    margin: 0;
    color: var(--color-text);
    transition: color 0.3s ease;
    font-size: 1.125rem;
  }

  .project-card:hover .project-card-title {
    color: var(--color-primary);
  }
</style>

