---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
  animationDelay: number;
}

const { title, description, pubDate, url, animationDelay } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate);
---

<a href={url} class="post-card animate-fadeInUp" style={`animation-delay: ${animationDelay}s;`}>
  <article>
    <h3 class="post-card-title">{title}</h3>
    <p class="post-card-description">{description}</p>
    <time class="post-card-date" datetime={pubDate.toISOString()}>
      {formattedDate}
    </time>
  </article>
</a>

<style>
  .post-card {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    border: 1px solid;
    border-radius: 8px;
    transition: all 0.3s ease;
    background-color: transparent;
  }

  .post-card:hover {
    border-color: var(--color-primary);
    background-color: rgba(0, 255, 153, 0.05);
    transform: translateY(-2px);
  }

  :global([data-theme="light"]) .post-card:hover {
    background-color: rgba(22, 187, 140, 0.08);
  }

  .post-card article {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post-card-title {
    font-weight: 600;
    margin: 0;
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  .post-card:hover .post-card-title {
    color: var(--color-primary);
  }

  .post-card-description {
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .post-card-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
</style>

