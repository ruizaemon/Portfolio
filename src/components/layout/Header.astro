---
import Navigation from "./Navigation.astro";
import LightDarkMode from "./LightDarkMode.astro";

const { title, locale = 'en' } = Astro.props;
---
<header>
  <h1>
    <a href={`/${locale}/`} class="home-link">{title}</a>
  </h1>
  <LightDarkMode />
  <nav>
    <Navigation />
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .home-link {
    color: var(--color-text);
    text-decoration: none;
  }

  nav {
    margin-left: auto;
  }
</style>