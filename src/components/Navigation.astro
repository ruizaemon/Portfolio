---
import { t } from '../utils/i18n';
import LanguageSelector from './LanguageSelector.astro';

const locale = Astro.currentLocale || 'en';
const currentPath = Astro.url.pathname;

// Helper function to check if a link is current
function isCurrentPage(href: string) {
  if (href === `/${locale}/`) {
    return currentPath === `/${locale}/`;
  }
  return currentPath.startsWith(href);
}
---

<nav class="nav">
  <button class="hamburger" aria-expanded="false" aria-label="Toggle navigation menu">
    <span class="hamburger-line"></span>
    <span class="hamburger-line"></span>
    <span class="hamburger-line"></span>
  </button>
  
  <div class="nav-menu">
    <div class="nav-links">
      <a href={`/${locale}/`} class={isCurrentPage(`/${locale}/`) ? 'current' : ''}>{t(locale, 'nav.home')}</a>
      <a href={`/${locale}/projects/`} class={isCurrentPage(`/${locale}/projects/`) ? 'current' : ''}>{t(locale, 'nav.projects')}</a>
      <a href={`/${locale}/blog/`} class={isCurrentPage(`/${locale}/blog/`) ? 'current' : ''}>{t(locale, 'nav.blog')}</a>
    </div>
    <div class="nav-language">
      <LanguageSelector />
    </div>
  </div>
</nav>

<script>
  // Hamburger menu functionality
  const hamburger = document.querySelector('.hamburger');
  const navMenu = document.querySelector('.nav-menu');
  
  if (hamburger && navMenu) {
    hamburger.addEventListener('click', () => {
      const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', (!isExpanded).toString());
      navMenu.classList.toggle('open');
    });
    
    // Close menu when clicking on a link
    const navLinks = document.querySelectorAll('.nav-links a');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        hamburger.setAttribute('aria-expanded', 'false');
        navMenu.classList.remove('open');
      });
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!hamburger.contains(e.target as Node) && !navMenu.contains(e.target as Node)) {
        hamburger.setAttribute('aria-expanded', 'false');
        navMenu.classList.remove('open');
      }
    });
  }
</script>

<style>
  /* Mobile-first base styles */
  .nav {
    position: relative;
  }
  
  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    position: relative;
    z-index: 10;
  }
  
  .hamburger-line {
    width: 2rem;
    height: 0.25rem;
    background: var(--color-text);
    border-radius: 10px;
    transition: all 0.3s ease;
    transform-origin: 1px;
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:first-child {
    transform: rotate(45deg);
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: rotate(-45deg);
  }
  
  .nav-menu {
    display: flex;
    position: fixed;
    top: 0;
    right: -150%;
    height: 100vh;
    width: 100%;
    max-width: 300px;
    background: var(--color-background);
    border-left: 1px solid var(--color-text-muted);
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    padding: 5rem 2rem 2rem;
    gap: 2rem;
    transition: right 0.3s ease;
    z-index: 5;
    box-shadow: -4px 0 12px rgba(0, 0, 0, 0.3);
  }
  
  .nav-menu.open {
    right: 0;
  }
  
  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .nav-links a {
    text-decoration: none;
    position: relative;
    padding: 1rem 0;
    font-size: 1.125rem;
    transition: color 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    
    /* Hover underline animation */
    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background-color: var(--color-primary);
      transition: width 0.3s ease;
    }
    
    &:hover::after {
      width: 100%;
    }
    
    /* Current page styling */
    &.current {
      color: var(--color-primary);
      &::after {
        width: 100%;
        background-color: var(--color-primary);
      }
    }
  }
  
  .nav-language {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1rem;
  }

  @media (min-width: 801px) {
    .hamburger {
      display: none;
    }
    
    .nav-menu {
      position: static;
      height: auto;
      width: auto;
      max-width: none;
      background: transparent;
      border: none;
      box-shadow: none;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 0;
      gap: 2rem;
      right: auto;
    }
    
    .nav-links {
      flex-direction: row;
      gap: 2rem;
    }
    
    .nav-links a {
      padding: 0.5rem 0;
      font-size: 1rem;
      border-bottom: none;
    }
    
    .nav-language {
      margin-top: 0;
      justify-content: flex-start;
    }
  }
</style>